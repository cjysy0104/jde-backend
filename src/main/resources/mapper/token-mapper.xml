<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.kh.jde.token.model.dao.TokenMapper">
	
	<insert id="saveToken" parameterType="RefreshToken">
		INSERT
		  INTO
		       TB_TOKEN
		VALUES
		       (
		       SEQ_TOKEN_NO.NEXTVAL
		     , #{username}
		     , #{token}
		     , #{expiration}
		       )
	</insert>
	
	<delete id="deleteToken" parameterType="string">
		DELETE
		  FROM
		       TB_TOKEN
		 WHERE
		       MEMBER_ID = #{email}
	</delete>
	
	<delete id="deleteTokenForLogout" parameterType="MemberLogoutDTO" >
		DELETE
		  FROM
		       TB_TOKEN
		 WHERE
		       EMAIL = #{email}
		   AND
		       TOKEN = #{refreshToken}
	</delete>
	
	<select id="findByToken" parameterType="string" resultType="RefreshToken">
		SELECT
		       TOKEN
		     , EMAIL username
		     , EXPIRATION
		  FROM
		       TB_TOKEN
		 WHERE
		       TOKEN = #{refreshToken}
	</select>
	
</mapper>